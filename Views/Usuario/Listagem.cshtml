@model List<Usuario>
@{
    ViewData["Title"] = "Listagem de Usuários";
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Login</th>
                        <th>Senha</th>
                        <th>Tipo</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Usuario u in Model)
                    {
                        <tr>
                            <td>@u.Nome</td>
                            <td>@u.Login</td>
                            <td>@u.Senha</td>
                            @if (u.Tipo == Usuario.admin)
                            {
                                <td>Administrador</td>
                            }
                            else
                            {
                                <td>Padrão</td>
                            }
                            <td><a href="/Usuario/Edicao?id=@u.Id">Editar</a> |
                            <a onclick="return confirm('Tem certeza de que deseja excluir o Usuário?');" href="/Usuario/ExcluirUsuario?id=@u.Id">Excluir</a></td>
                        </tr>
                    }
                </tbody>
        </table>
    </div>
</div>